          <label><i class="fas fa-user"></i> Patient Name </label><br>
          <input type="text" id="name" class="form-control mb-4" placeholder="Patient Name" name="name" value="<%= typeof name != 'undefined' ? name : '' %>"/>

          <!-- Age -->
          <label><i class="fas fa-user"></i>Patient Age </label><br>
          <input type="text" id="age" class="form-control mb-4" placeholder="Patient Age" name="age" value="<%= typeof age != 'undefined' ? age : '' %>"/>
          
          <!-- Medicines name and quantity -->
          <label><i class="fas fa-user"></i> Medicine Name and quantity </label><br>
          <input type="text" id="medicines" class="form-control mb-4" placeholder="Medicine Name and quantity" name="medicines" />

          <!-- Lab tests if required any -->
          <label><i class="fas fa-user"></i> Lab Tests </label><br>
          <input type="text" id="labtests" class="form-control mb-4" placeholder="Lab Test if required" name="labtests" />

          <!-- Next appointment date if necessary -->
          <label><i class="fas fa-user"></i> Next appointment date</label><br>
          <input type="date" id="doa" class="form-control mb-4" placeholder="Next appointment date if necessary" name="doa" />
                    
          <button class="btn btn-secondary" type="submit">Post</button>
      </div>
    </form>
