
     <div class="row mt-5">
        <div class="col-md-6 m-auto">
          <div class="card card-body text-center">
            <h1><img src="https://img.icons8.com/plasticine/100/000000/doctor-male.png"/></h1>
            <!-- Default form register -->
              <form action="/users/register" method="POST">

              <p class="h4 mb-4">Sign up</p>

              <%- include('./partials/messages.ejs'); %>

              <!-- First name -->
              <input type="text" id="name" class="form-control mb-4" placeholder="First name" name="name" value="<%= typeof name != 'undefined' ? name : '' %>"/>
      
              <!-- E-mail -->
              <input type="text" id="email" class="form-control mb-4" placeholder="User ID" name="email" value="<%= typeof email != 'undefined' ? email : '' %>" />
    
              <!-- Password -->
              <input type="password" id="password" class="form-control mb-4" placeholder="Password" aria-describedby="defaultRegisterFormPasswordHelpBlock" name="password" value="<%= typeof password != 'undefined' ? password : '' %>" />
    
              <!-- Password -->
              <input type="password" id="password2" class="form-control mb-4" placeholder="Confirm Password" aria-describedby="defaultRegisterFormPasswordHelpBlock" name="password2" value="<%= typeof password2 != 'undefined' ? password2 : '' %>"/>
    
              <!-- Sign up button -->
              <button class="btn btn-primary my-4 btn-block" type="submit">Sign up</button>

              <p>already a member?
              <a href="/users/login">Login</a>
              </p>

              <hr>

              </form>
            <!-- Default form register -->

          </div>
        </div>
      </div>