<style>
body {           
      background-color: #E4E9FD;
      background-image: -webkit-linear-gradient(48deg, #A683E3 50%, #E4E9FD 50%);
      font-family: 'Roboto', sans-serif;
    }
.card {
    border-radius:5px;
    box-shadow:2px 2px 20px 1px black;
    background-color:rgb(0,0,0,0.5);
    color: white; 
  }
</style>

<body >
     <div class="row mt-5">
        <div class="col-md-6 m-auto">
          <div class="card card-body">
            <div class="text-center"> 
            <p class="h4 mb-4">Sign up</p>
            </div>
            <!-- Default form register -->
              <form action="/users/register" method="POST">
              <%- include('./partials/messages.ejs'); %>

              <!-- First name -->
              <label><i class="fas fa-user"></i> Name </label><br>
              <input type="text" id="name" class="form-control mb-4" placeholder="name" name="name" value="<%= typeof name != 'undefined' ? name : '' %>"/>

              <div class="dates">
                <label><i class="fas fa-calendar"></i> DOB </label><br>
                <input type="text" autocomplete="off" id="user1" class="form-control" placeholder="DOB" name="DOB"><br>
               </div>

              <label><i class="fas fa-user"></i> Gender </label><br>
              <select class="browser-default custom-select mb-4" name="gender">
                <option value="Female">Female</option>
                <option value="Male">Male</option>
                <option value="Others">Others</option>
              </select><br>

              <!-- Age -->
              <label><i class="fas fa-user"></i> Age </label><br>
              <input type="text" id="age" class="form-control mb-4" placeholder="Age" name="age" value="<%= typeof age != 'undefined' ? age : '' %>"/>
              
              <label><i class="fas fa-mobile"></i> Mobile Number </label><br>
              <input type="text" id="age" class="form-control mb-4" placeholder="Mobile Number" name="phone" value="<%= typeof phone != 'undefined' ? phone : '' %>"/>
              
              <label><i class="fas fa-address-card"></i> Address </label><br>
              <input type="text" id="address" class="form-control mb-4" placeholder="Address" name="address" value="<%= typeof address != 'undefined' ? address : '' %>"/>

              <label><i class="fas fa-users"></i> Position </label><br>
              <select class="browser-default custom-select mb-4" name="type">
                <option value="Receptionist">Receptionist</option>
                <option value="Doctor">Doctor</option>
                <option value="Accountant">Accountant</option>
                <option value="Pharmacist">Pharmacist</option>
                <option value="Laboratory">Laboratory</option>
                <option value="IPD">IPD</option>
                
              </select>

              <label><i class="fas fa-user-md"></i> Position </label><br>
              <select class="browser-default custom-select mb-4" name="spe">
                <option value= "NA"> NA </option>
                <% if (typeof diseases !== 'undefined' && diseases.length > 0) {%>
                  <%for (var i = 0; i < diseases.length; i++) { %>
                    <option value="<%= diseases[i].d_name %>"> <%= diseases[i].d_name %> </option>
                  <%}%>
                <% } %>
              </select>
            
              <div class="dates">
                <label><i class="fas fa-calendar"></i> Date Of Joining </label><br>
                <input type="text" autocomplete="off" id="user1" class="form-control" placeholder="Date of Joining" name="date"><br>
               </div>

              <!-- E-mail -->
              <label><i class="fas fa-envelope"></i> E-mail </label><br>
              <input type="text" id="email" class="form-control mb-4" placeholder="E-mail" name="email" value="<%= typeof email != 'undefined' ? email : '' %>" />
              
              <!-- Password -->
              <label><i class="fas fa-unlock"></i> Password </label><br>
              <input type="password" id="password" class="form-control mb-4" placeholder="Password" aria-describedby="defaultRegisterFormPasswordHelpBlock" name="password" value="<%= typeof password != 'undefined' ? password : '' %>" />
              
              <!-- Password -->
              <label><i class="fas fa-lock-open"></i> Confirm Password </label><br>
              <input type="password" id="password2" class="form-control mb-4" placeholder="Confirm Password" aria-describedby="defaultRegisterFormPasswordHelpBlock" name="password2" value="<%= typeof password2 != 'undefined' ? password2 : '' %>"/>
              
              <!-- Sign up button -->
              <button class="btn btn-primary my-4 btn-block" type="submit">Sign up</button>

              <div class="text-center"> 
                <p >already a member?
                <a href="/users/login">Login</a>
                </p>
              </div>

              </form>
            <!-- Default form register -->
          </div>
        </div>
      </div>
    </body>
      


      